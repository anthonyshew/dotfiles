{
  "$schema": "https://opencode.ai/config.json",
  "theme": "vercel",
  "model": "vercel/anthropic/claude-opus-4.6",
  "mcp": {
    "linear": {
      "type": "remote",
      "url": "https://mcp.linear.app/mcp",
      "enabled": true
    }
  },
  "tools": {
    "linear_*": false
  },
  "permission": {
    "external_directory": {
      "/tmp/**": "allow",
      "/private/tmp/**": "allow"
    }
  },
  "keybinds": {
    "agent_cycle_reverse": "none",
    "model_cycle_recent": "shift+tab"
  }
}
